import React, { useState, useRef, useEffect } from 'react';
import { TrendingUp, Send, Brain, DollarSign, BarChart3, Search } from 'lucide-react';

const InvestmentChatBot = () => {
  const [messages, setMessages] = useState([
    {
      role: 'assistant',
      content: 'üëã Ciao! Sono il tuo assistente AI per investimenti e azioni. Posso aiutarti con:\n\nüìä Analisi di azioni e titoli\nüí∞ Strategie di investimento\nüìà Analisi tecnica e fondamentale\nüì∞ Notizie di mercato aggiornate\nüéØ Raccomandazioni personalizzate\n\nFammi una domanda su qualsiasi azione o argomento di investimento!'
    }
  ]);
  const [input, setInput] = useState('');
  const [loading, setLoading] = useState(false);
  const messagesEndRef = useRef(null);

  const scrollToBottom = () => {
    messagesEndRef.current?.scrollIntoView({ behavior: 'smooth' });
  };

  useEffect(() => {
    scrollToBottom();
  }, [messages]);

  const suggestedQuestions = [
    "Analizza l'azione AAPL",
    "Quali sono i migliori ETF tecnologici?",
    "Come funziona il P/E ratio?",
    "Tesla √® un buon investimento ora?",
    "Spiegami la strategia DCA",
    "Quali azioni dividendi consigli?"
  ];

  const handleSend = async () => {
    if (!input.trim() || loading) return;

    const userMessage = input.trim();
    setInput('');
    setMessages(prev => [...prev, { role: 'user', content: userMessage }]);
    setLoading(true);

    try {
      const response = await fetch("https://api.anthropic.com/v1/messages", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify({
          model: "claude-sonnet-4-20250514",
          max_tokens: 2000,
          tools: [
            {
              type: "web_search_20250305",
              name: "web_search"
            }
          ],
          messages: [
            {
              role: "user",
              content: `Sei un assistente esperto di investimenti e mercati finanziari. Rispondi in Italiano in modo chiaro e professionale.

IMPORTANTE:
- Se l'utente chiede di analizzare un'azione (es: "analizza AAPL"), usa web_search per cercare dati aggiornati
- Fornisci sempre dati reali e aggiornati quando possibile
- Includi numeri, prezzi, percentuali quando rilevanti
- Sii obiettivo e menziona sia pro che contro
- Ricorda sempre che non dai consigli finanziari ma informazioni educative

Domanda dell'utente: ${userMessage}`
            }
          ]
        })
      });

      const data = await response.json();
      
      let assistantMessage = '';
      for (const block of data.content) {
        if (block.type === 'text') {
          assistantMessage += block.text;
        }
      }

      setMessages(prev => [...prev, { 
        role: 'assistant', 
        content: assistantMessage || 'Mi dispiace, non sono riuscito a elaborare la risposta. Riprova.'
      }]);

    } catch (error) {
      console.error('Error:', error);
      setMessages(prev => [...prev, { 
        role: 'assistant', 
        content: '‚ùå Si √® verificato un errore. Riprova tra poco.'
      }]);
    } finally {
      setLoading(false);
    }
  };

  const handleSuggestion = (question) => {
    setInput(question);
  };

  return (
    <div className="flex flex-col h-screen bg-gradient-to-br from-slate-900 via-blue-900 to-slate-900">
      {/* Header */}
      <div className="bg-slate-800/80 backdrop-blur-sm border-b border-slate-700 p-4">
        <div className="max-w-4xl mx-auto flex items-center gap-3">
          <div className="p-2 bg-gradient-to-br from-emerald-400 to-blue-500 rounded-lg">
            <TrendingUp className="w-6 h-6 text-white" />
          </div>
          <div>
            <h1 className="text-xl font-bold text-white">AI Investment Assistant</h1>
            <p className="text-sm text-slate-400">Il tuo esperto di investimenti personale</p>
          </div>
        </div>
      </div>

      {/* Messages Area */}
      <div className="flex-1 overflow-y-auto p-4">
        <div className="max-w-4xl mx-auto space-y-4">
          {messages.map((message, index) => (
            <div
              key={index}
              className={`flex ${message.role === 'user' ? 'justify-end' : 'justify-start'}`}
            >
              <div
                className={`max-w-[80%] rounded-2xl p-4 ${
                  message.role === 'user'
                    ? 'bg-gradient-to-r from-emerald-500 to-blue-500 text-white'
                    : 'bg-slate-800/80 text-slate-100 border border-slate-700'
                }`}
              >
                {message.role === 'assistant' && (
                  <div className="flex items-center gap-2 mb-2">
                    <Brain className="w-4 h-4 text-emerald-400" />
                    <span className="text-xs font-semibold text-emerald-400">AI Assistant</span>
                  </div>
                )}
                <div className="whitespace-pre-wrap text-sm leading-relaxed">
                  {message.content}
                </div>
              </div>
            </div>
          ))}

          {loading && (
            <div className="flex justify-start">
              <div className="bg-slate-800/80 rounded-2xl p-4 border border-slate-700">
                <div className="flex items-center gap-2">
                  <div className="w-2 h-2 bg-emerald-400 rounded-full animate-pulse"></div>
                  <div className="w-2 h-2 bg-emerald-400 rounded-full animate-pulse" style={{ animationDelay: '0.2s' }}></div>
                  <div className="w-2 h-2 bg-emerald-400 rounded-full animate-pulse" style={{ animationDelay: '0.4s' }}></div>
                  <span className="text-sm text-slate-400 ml-2">Sto analizzando...</span>
                </div>
              </div>
            </div>
          )}

          <div ref={messagesEndRef} />
        </div>
      </div>

      {/* Suggested Questions */}
      {messages.length <= 2 && (
        <div className="px-4 pb-4">
          <div className="max-w-4xl mx-auto">
            <p className="text-sm text-slate-400 mb-2">üí° Domande suggerite:</p>
            <div className="grid grid-cols-2 md:grid-cols-3 gap-2">
              {suggestedQuestions.map((question, index) => (
                <button
                  key={index}
                  onClick={() => handleSuggestion(question)}
                  className="text-left text-sm bg-slate-800/50 hover:bg-slate-800 text-slate-300 rounded-lg p-3 border border-slate-700 transition-all"
                >
                  {question}
                </button>
              ))}
            </div>
          </div>
        </div>
      )}

      {/* Input Area */}
      <div className="bg-slate-800/80 backdrop-blur-sm border-t border-slate-700 p-4">
        <div className="max-w-4xl mx-auto">
          <div className="flex gap-3">
            <input
              type="text"
              value={input}
              onChange={(e) => setInput(e.target.value)}
              onKeyDown={(e) => e.key === 'Enter' && !e.shiftKey && handleSend()}
              placeholder="Chiedi qualsiasi cosa su azioni e investimenti..."
              className="flex-1 bg-slate-900 text-white placeholder-slate-500 rounded-xl px-4 py-3 focus:outline-none focus:ring-2 focus:ring-emerald-500 border border-slate-700"
              disabled={loading}
            />
            <button
              onClick={handleSend}
              disabled={loading || !input.trim()}
              className="px-6 py-3 bg-gradient-to-r from-emerald-500 to-blue-500 text-white rounded-xl font-semibold hover:from-emerald-600 hover:to-blue-600 transition-all disabled:opacity-50 disabled:cursor-not-allowed flex items-center gap-2"
            >
              <Send className="w-5 h-5" />
            </button>
          </div>
          <p className="text-xs text-slate-500 mt-2 text-center">
            ‚ö†Ô∏è Questo √® un tool educativo. Non costituisce consulenza finanziaria. Consulta sempre un professionista.
          </p>
        </div>
      </div>
    </div>
  );
};

export default InvestmentChatBot;
